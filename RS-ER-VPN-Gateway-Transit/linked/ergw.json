{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "expressrouteGatewayName": {
            "defaultValue": "Azure-ERGW",
            "type": "String"
        },
        "expressrouteGatewaySize": {
            "type": "String",
            "defaultValue": "Standard",
            "allowedValues": [
                "Standard",
                "HighPerformance",
                "UltraPerformance"
            ]
        },
        "vnetName": {
            "type": "String"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "publicIpAddressName": "[concat(parameters('expressrouteGatewayName'), '-pip')]"
    },
    "resources": [
        {
            "name": "[variables('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2019-02-01",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "sku": {
                "name": "Basic"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2020-11-01",
            "name": "[parameters('expressrouteGatewayName')]",
            "location": "[variables('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "vnetGatewayConfig0",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/Microsoft.Network/virtualNetworkGateways', variables('publicIpAddressName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'), '/subnets/GatewaySubnet')]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "[parameters('expressrouteGatewaySize')]",
                    "tier": "[parameters('expressrouteGatewaySize')]"
                },
                "gatewayType": "ExpressRoute"
            }
        }
    ]
}