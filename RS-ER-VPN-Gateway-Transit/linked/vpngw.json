{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "gatewayName": {
            "type": "string",
            "defaultValue": "vpngw",
            "metadata": {
                "description": "The shared key used to establish connection between the two vNet Gateways. When you choose Active/Active an AA it will be added in front of the name"
            }
        },
        "gatewaySku": {
            "type": "string",
            "defaultValue": "VpnGw1",
            "allowedValues": [
                "VpnGw1",
                "VpnGw2",
                "VpnGw3",
                "VpnGw4",
                "VpnGw5"
            ],
            "metadata": {
                "description": "The SKU for the VPN Gateway. Cannot be Basic SKU."
            }
        },
        "activeActive": {
            "type": "string",
            "defaultValue": "Disabled",
            "allowedValues": [
                "Disabled",
                "Enabled"
            ],
            "metadata": {
                "description": "Disabled deployd VPN Gateway as Active/Passive. Enabled Deploys VPN Gateway as Active/Active"
            }
        },
        "vpnGatewayGeneration": {
            "type": "string",
            "defaultValue": "Generation1",
            "allowedValues": [
                "Generation1",
                "Generation2"
            ],
            "metadata": {
                "description": "Select VPN Gateway Generation."
            }
        },
        "asn": {
            "type": "string",
            "metadata": {
                "description": "Location of the resources"
            },
            "defaultValue": "65515"
        },
        "customBgpIPAddresses_1": {
            "defaultValue": "169.254.21.1",
            "type": "String",
            "metadata": {
                "description": "Set first APIPA BGP Address"
            }
        },
        "customBgpIPAddresses_2": {
            "defaultValue": "169.254.21.2",
            "type": "String",
            "metadata": {
                "description": "Set second APIPA BGP Address (this is ignored when Active-Active is set to Disabled)"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Existing Virtual Nework Name"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "PublicIPName1": "[concat(parameters('gatewayName'),'-pip1')]",
        "PublicIPName2": "[concat(parameters('gatewayName'),'-pip2')]",
        "AAgwname": "[concat(parameters('gatewayName'),'-AA')]"
    },
    "resources": [
        {
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('PublicIPName1')]",
            "location": "[variables('location')]",
            "comments": "This is the public IP for vNet Gateway 2",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
           },
            "sku": {
                "name": "Basic",
                "tier": "Regional" 
            }
        },
        {
            "condition": "[equals(parameters('activeActive'),'Enabled')]",
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('PublicIPName2')]",
            "location": "[variables('location')]",
            "comments": "This is the public IP for vNet Gateway 2",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "sku": {
                "name": "Basic",
                "tier": "Regional" 
            }
        },
        {
            "condition": "[equals(parameters('activeActive'),'Enabled')]",
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "name": "[variables('AAgwname')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses/', variables('PublicIPName1'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses/', variables('PublicIPName2'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "Ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnetName'),'GatewaySubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIPName1'))]"
                            }
                        }
                    },
                    {
                         "name": "Ipconfig2",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnetName'),'GatewaySubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIPName2'))]"
                            }
                        }
                    }
                ],
                "gatewayType": "Vpn",
                "vpnGatewayGeneration": "[parameters('vpnGatewayGeneration')]",
                "sku": {
                     "name": "[parameters('gatewaySku')]",
                    "tier": "[parameters('gatewaySku')]"
                },
                "vpnType": "RouteBased",
                "enableBgp": true,
                "activeActive": true,
                "bgpSettings": {
                    "asn": "[parameters('asn')]",
                    "bgpPeeringAddresses": [
                        {
                            "ipconfigurationId": "[concat(resourceId('Microsoft.Network/virtualNetworkGateways',variables('AAgwname')),'/ipConfigurations/Ipconfig1')]",
                            "customBgpIpAddresses": [
                                "[parameters('customBgpIPAddresses_1')]"
                            ]
                        },
                        {
                            "ipconfigurationId": "[concat(resourceId('Microsoft.Network/virtualNetworkGateways',variables('AAgwname')),'/ipConfigurations/Ipconfig2')]",
                            "customBgpIpAddresses": [
                                "[parameters('customBgpIPAddresses_2')]"
                            ]
                        }
                    ]                        
                }
            }
        },
        {
            "condition": "[equals(parameters('activeActive'),'Disabled')]",
            "apiVersion": "2020-05-01",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "name": "[parameters('gatewayName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses/', variables('PublicIPName1'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "Ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnetName'),'GatewaySubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIPName1'))]"
                            }
                        }
                    }
                ],
                "gatewayType": "Vpn",
                "vpnGatewayGeneration": "[parameters('vpnGatewayGeneration')]",
                "sku": {
                     "name": "[parameters('gatewaySku')]",
                    "tier": "[parameters('gatewaySku')]"
                },
                "vpnType": "RouteBased",
                "enableBgp": true,
                "activeActive": false,
                "bgpSettings": {
                    "asn": "[parameters('asn')]",
                    "bgpPeeringAddresses": [
                        {
                            "ipconfigurationId": "[concat(resourceId('Microsoft.Network/virtualNetworkGateways',parameters('gatewayName')),'/ipConfigurations/Ipconfig1')]",
                            "customBgpIpAddresses": [
                                "[parameters('customBgpIPAddresses_1')]"
                            ]
                        }
                    ]                        
                }
            }
        }        
    ] 
}